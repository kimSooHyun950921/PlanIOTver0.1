<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/fullListLayout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
           >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/images"/>
            <TextView
                android:id="@+id/plantNameInfo"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="식물이름"/>
            <EditText
                android:id="@+id/plantName"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="달심이"
                android:enabled="false"
                android:textSize="20dp"/>
            <!--enabled는 수정하기-->
            <LinearLayout
                android:id="@+id/statusLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/fullstatusInfo"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전체상태"
                android:textSize="20dp"
                />
            <ImageView
                android:id="@+id/fullstatusImage"
                android:layout_marginLeft="40dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:textSize="20dp"
                android:text="아주좋아요"
                android:src="@drawable/soso"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sunInfoLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/sunInfoImageLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left">
                <TextView
                    android:id="@+id/sunInfo"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="햇빛"

                    android:textSize="20dp"/>

                <ImageView
                    android:id="@+id/sunInfoImage"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:textSize="20dp"
                    android:src="@drawable/sun"
                   />
                    </LinearLayout>

                <com.github.lzyzsd.circleprogress.CircleProgress

                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/sun_circle_progress"
                    android:layout_marginLeft="50dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    custom:circle_progress="20"/>
                <LinearLayout
                        android:id="@+id/sun_movementLinearLayout"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="right"

                        android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:transitionGroup="true"
                    android:baselineAligned="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="암막커튼치기"/>
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sun_block_curtain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="불켜기"/>
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sun_movement_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수분"
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="20dp"
                    android:src="@drawable/waterdrop" />
                </LinearLayout>
                <com.github.lzyzsd.circleprogress.CircleProgress
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/circle_progress_water"
                    android:layout_marginLeft="50dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    custom:circle_progress="20"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp">
                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물주기"
                   />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/soilInfoImageLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left">
                    <TextView
                        android:id="@+id/soilInfo"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="토양"

                        android:textSize="20dp"/>

                    <ImageView
                        android:id="@+id/soilInfoImage"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:textSize="20dp"
                        android:src="@drawable/soil"
                        />
                </LinearLayout>


                <EditText
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="비료가 필요해요"
                    android:enabled="false" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
