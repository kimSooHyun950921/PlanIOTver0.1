<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/tulip"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/tulip"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/ptitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="식물이름"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/pname"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="튤립"
                    android:enabled="false"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/pcontext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="식물설명"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/pdetail"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용~~"
                    android:enabled="false"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="식물이 필요한 정보"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    />
                <LinearLayout
                    android:id="@+id/dic_sunInfoLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/dic_sunInfoImageLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left">
                        <TextView
                            android:id="@+id/dic_sunInfo"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="햇빛"

                            android:textSize="20dp"/>

                        <ImageView
                            android:id="@+id/dic_sunInfoImage"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:textSize="20dp"
                            android:src="@drawable/sun"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/dic_light_info"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="55dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="20도"
                        android:enabled="false" />
                    <LinearLayout
                        android:id="@+id/dic_sun_movementLinearLayout"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="right"

                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:transitionGroup="true"
                        android:baselineAligned="true">


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dic_waterInfoLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/dic_waterInfoImageLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left">
                        <TextView
                            android:id="@+id/dic_water_Info"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="수분"

                            android:textSize="20dp"/>

                        <ImageView
                            android:id="@+id/dic_waterdrop"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:textSize="20dp"
                            android:src="@drawable/waterdrop"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dic_water_info_i"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="55dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="20도"
                        android:enabled="false" />

                    <LinearLayout
                        android:id="@+id/dic_water_movementLinearLayout"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="right"

                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:transitionGroup="true"
                        android:baselineAligned="true">


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dic_temper_InfoLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/dic_temper_InfoImageLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left">
                        <TextView
                            android:id="@+id/dic_temper_view"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="햇빛"

                            android:textSize="20dp"/>

                        <ImageView
                            android:id="@+id/dic_temper"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:textSize="20dp"
                            android:src="@drawable/temper"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/dic_temper_info"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="55dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="20도"
                        android:enabled="false" />
                </LinearLayout>



                <Button
                    android:id="@+id/addPlant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:onClick="addPlant"
                    android:text="추가하기"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
